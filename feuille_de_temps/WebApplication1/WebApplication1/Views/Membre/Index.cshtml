@model IEnumerable<Membre>

@{
    ViewData["Title"] = "Membres";
}

<h1>Liste des Membres</h1>

<a href="@Url.Action("Create", "Membre")" class="btn btn-success mb-3">Ajouter un Membre</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Rôle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var membre in Model)
        {
            <tr>
                <td>@membre.Nom</td>
                <td>@membre.Role</td>
            </tr>
        }
    </tbody>
</table>
