@model IEnumerable<TempsTravail>

@{
    ViewData["Title"] = "Temps de Travail";
}

<h1>Gestion des Temps de Travail</h1>

<a href="@Url.Action("Create", "TempsTravail")" class="btn btn-success mb-3">Ajouter un Temps de Travail</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Membre</th>
            <th>Sprint</th>
            <th>Catégorie</th>
            <th>Temps (en heures)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tt in Model)
        {
            <tr>
                <td>@tt.Membre.Nom</td>
                <td>@tt.Sprint.Nom</td>
                <td>@tt.Categorie</td>
                <td>@tt.TempsHeures</td>
                <td>
                    <a href="@Url.Action("Edit", "TempsTravail", new { id = tt.Id })" class="btn btn-warning">Modifier</a>
                </td>
            </tr>
        }
    </tbody>
</table>
